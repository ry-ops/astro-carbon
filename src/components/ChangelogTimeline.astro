---
// Changelog Timeline - GitHub Blog style horizontal timeline

interface ChangelogItem {
  title: string;
  date: string;
}

interface Props {
  items: ChangelogItem[];
}

const { items } = Astro.props;
const displayItems = items.slice(0, 4);
---

<section class="changelog-timeline" aria-labelledby="changelog-timeline-title">
  <div class="changelog-timeline-header">
    <h2 id="changelog-timeline-title" class="changelog-timeline-title">Changelog</h2>
    <a href="/changelog" class="changelog-timeline-link">
      View all changes
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M5 12h14M12 5l7 7-7 7"/>
      </svg>
    </a>
  </div>

  <div class="changelog-timeline-grid">
    {displayItems.map((item, index) => (
      <a href="/changelog" class="changelog-timeline-item">
        <div class="changelog-timeline-dot-wrapper">
          <div class="changelog-timeline-dot"></div>
          {index < displayItems.length - 1 && <div class="changelog-timeline-line"></div>}
        </div>
        <div class="changelog-timeline-content">
          <h3 class="changelog-timeline-item-title">{item.title}</h3>
          <time class="changelog-timeline-date">{item.date}</time>
        </div>
      </a>
    ))}
  </div>
</section>

<style>
  .changelog-timeline {
    padding: 3rem 0 4rem;
  }

  .changelog-timeline-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 2rem;
    gap: 1rem;
  }

  .changelog-timeline-title {
    font-size: var(--font-size-2xl);
    font-weight: 700;
    color: #1f2328;
    margin: 0;
  }

  .changelog-timeline-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: var(--font-size-base);
    font-weight: 600;
    color: var(--accent-primary);
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .changelog-timeline-link:hover {
    opacity: 0.8;
  }

  .changelog-timeline-link svg {
    transition: transform 0.2s ease;
  }

  .changelog-timeline-link:hover svg {
    transform: translateX(4px);
  }

  .changelog-timeline-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 0;
  }

  .changelog-timeline-item {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
    padding: 0 1rem;
    position: relative;
  }

  .changelog-timeline-item:first-child {
    padding-left: 0;
  }

  .changelog-timeline-item:last-child {
    padding-right: 0;
  }

  .changelog-timeline-dot-wrapper {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
    position: relative;
  }

  .changelog-timeline-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: var(--accent-primary);
    flex-shrink: 0;
    z-index: 1;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .changelog-timeline-item:hover .changelog-timeline-dot {
    transform: scale(1.3);
    box-shadow: 0 0 0 4px rgba(6, 147, 227, 0.2);
  }

  .changelog-timeline-line {
    position: absolute;
    left: 12px;
    right: -1rem;
    top: 50%;
    height: 2px;
    background-color: #d0d7de;
    transform: translateY(-50%);
  }

  .changelog-timeline-item:nth-child(3) .changelog-timeline-line,
  .changelog-timeline-item:nth-child(2) .changelog-timeline-line,
  .changelog-timeline-item:first-child .changelog-timeline-line {
    right: -1rem;
  }

  .changelog-timeline-content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .changelog-timeline-item-title {
    font-size: var(--font-size-base);
    font-weight: 600;
    color: #1f2328;
    line-height: 1.4;
    margin: 0;
    transition: color 0.2s ease;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .changelog-timeline-item:hover .changelog-timeline-item-title {
    color: var(--accent-primary);
  }

  .changelog-timeline-date {
    font-size: var(--font-size-sm);
    color: #656d76;
  }

  /* Responsive */
  @media (max-width: 1023px) {
    .changelog-timeline-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem 0;
    }

    .changelog-timeline-item {
      padding: 0 1rem 0 0;
    }

    .changelog-timeline-item:nth-child(2n) {
      padding: 0 0 0 1rem;
    }

    .changelog-timeline-line {
      display: none;
    }
  }

  @media (max-width: 640px) {
    .changelog-timeline-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }

    .changelog-timeline-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .changelog-timeline-item {
      flex-direction: row;
      gap: 1rem;
      padding: 0;
    }

    .changelog-timeline-item:nth-child(2n) {
      padding: 0;
    }

    .changelog-timeline-dot-wrapper {
      flex-direction: column;
      margin-bottom: 0;
    }

    .changelog-timeline-dot {
      margin-top: 0.25rem;
    }

    .changelog-timeline-title {
      font-size: var(--font-size-xl);
    }
  }
</style>
