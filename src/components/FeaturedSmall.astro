---
interface FeaturedPost {
  title: string;
  description: string;
  category: string;
  date: string;
  author?: {
    name: string;
    avatar?: string;
  };
  image?: string;
  href: string;
}

interface Props {
  posts: FeaturedPost[];
}

const { posts } = Astro.props;
---

<section class="featured-small" aria-label="More featured articles">
  <div class="featured-small-grid">
    {posts.map((post) => (
      <a href={post.href} class="featured-small-card">
        <div class="featured-small-image">
          {post.image && (
            <img
              src={post.image}
              alt=""
              role="presentation"
              loading="lazy"
              decoding="async"
            />
          )}
        </div>
        <div class="featured-small-content">
          <span class="featured-small-category">{post.category}</span>
          <h3 class="featured-small-title">{post.title}</h3>
          <p class="featured-small-description">{post.description}</p>
          <div class="featured-small-meta">
            {post.author && (
              <>
                <span class="featured-small-author">{post.author.name}</span>
                <span class="featured-small-separator">â€¢</span>
              </>
            )}
            <time>{post.date}</time>
          </div>
        </div>
      </a>
    ))}
  </div>
</section>

<style>
  .featured-small {
    margin-bottom: 4rem;
  }

  .featured-small-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }

  .featured-small-card {
    display: grid;
    grid-template-columns: 140px 1fr;
    gap: 1.25rem;
    text-decoration: none;
    color: inherit;
    padding: 1rem;
    border-radius: 8px;
    transition: background-color 0.2s ease;
  }

  .featured-small-card:hover {
    background-color: var(--bg-secondary);
  }

  .featured-small-card:focus-visible {
    outline: 2px solid var(--accent-primary);
    outline-offset: 2px;
    border-radius: 8px;
  }

  .featured-small-image {
    width: 140px;
    height: 90px;
    border-radius: 8px;
    overflow: hidden;
    background-color: var(--bg-tertiary);
    flex-shrink: 0;
  }

  .featured-small-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .featured-small-card:hover .featured-small-image img {
    transform: scale(1.05);
  }

  .featured-small-content {
    display: flex;
    flex-direction: column;
    min-width: 0;
  }

  .featured-small-category {
    font-size: var(--font-size-xs);
    font-weight: 600;
    color: var(--accent-primary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 0.5rem;
  }

  .featured-small-title {
    font-size: var(--font-size-lg);
    font-weight: 600;
    line-height: 1.3;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
    transition: color 0.2s ease;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .featured-small-card:hover .featured-small-title {
    color: var(--accent-primary);
  }

  .featured-small-description {
    font-size: var(--font-size-sm);
    line-height: var(--line-height-normal);
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    flex-grow: 1;
  }

  .featured-small-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: var(--font-size-xs);
    color: var(--text-secondary);
    margin-top: auto;
  }

  .featured-small-author {
    color: var(--text-primary);
  }

  .featured-small-separator {
    color: var(--text-muted);
  }

  /* Responsive */
  @media (max-width: 1023px) {
    .featured-small-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }

  @media (max-width: 640px) {
    .featured-small-card {
      grid-template-columns: 100px 1fr;
      gap: 1rem;
      padding: 0.75rem;
    }

    .featured-small-image {
      width: 100px;
      height: 65px;
    }

    .featured-small-title {
      font-size: var(--font-size-base);
    }

    .featured-small-description {
      display: none;
    }
  }
</style>
