---
interface Props {
  title: string;
  description: string;
  category: string;
  date: string;
  author?: {
    name: string;
    avatar?: string;
  };
  image?: string;
  href: string;
  featured?: boolean;
}

const {
  title,
  description,
  category,
  date,
  author,
  image = '/placeholder.jpg',
  href,
  featured = false,
} = Astro.props;
---

<article class="article-card">
  <a href={href} class="article-card-link" aria-label={`Read article: ${title}`}>
    <!-- Image Container -->
    <div class="article-card-image">
      <picture>
        <source
          type="image/webp"
          srcset={`${image.replace('.jpg', '-400w.webp')} 400w, ${image.replace('.jpg', '-800w.webp')} 800w, ${image.replace('.jpg', '-1200w.webp')} 1200w`}
          sizes="(max-width: 767px) 100vw, (max-width: 1023px) 50vw, 33vw"
        />
        <source
          type="image/jpeg"
          srcset={`${image.replace('.jpg', '-400w.jpg')} 400w, ${image.replace('.jpg', '-800w.jpg')} 800w, ${image.replace('.jpg', '-1200w.jpg')} 1200w`}
          sizes="(max-width: 767px) 100vw, (max-width: 1023px) 50vw, 33vw"
        />
        <img
          src={image}
          alt=""
          role="presentation"
          loading="lazy"
          decoding="async"
          width="800"
          height="450"
        />
      </picture>
    </div>

    <!-- Content Container -->
    <div class="article-card-content">
      <!-- Category Badge -->
      <div class="article-card-meta">
        <span class="category-badge" aria-label={`Category: ${category}`}>
          {category}
        </span>
      </div>

      <!-- Title -->
      <h2 class="article-card-title">
        {title}
      </h2>

      <!-- Description -->
      <p class="article-card-description">
        {description}
      </p>

      <!-- Author & Date -->
      {author && (
        <div class="article-card-author">
          {author.avatar && (
            <img
              src={author.avatar}
              alt=""
              role="presentation"
              class="author-avatar"
              loading="lazy"
              decoding="async"
              width="40"
              height="40"
            />
          )}
          <div class="author-info">
            <span class="author-name">{author.name}</span>
            <span class="separator" aria-hidden="true">â€¢</span>
            <time datetime={date}>{date}</time>
          </div>
        </div>
      )}
      {!author && (
        <div class="article-card-date">
          <time datetime={date}>{date}</time>
        </div>
      )}
    </div>
  </a>
</article>

<style>
  .article-card {
    display: flex;
    flex-direction: column;
    height: 100%;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .article-card:hover {
    transform: translateY(-4px);
  }

  .article-card-link {
    display: flex;
    flex-direction: column;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  .article-card-link:focus-visible {
    outline: 2px solid var(--accent-primary);
    outline-offset: 2px;
    border-radius: 8px;
  }

  /* Image Container - Fixed aspect ratio 16:9 */
  .article-card-image {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    overflow: hidden;
    border-radius: 8px 8px 0 0;
    background-color: var(--bg-secondary);
  }

  .article-card-image img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .article-card:hover .article-card-image img {
    transform: scale(1.05);
  }

  /* Content Container */
  .article-card-content {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    padding: 1.5rem 1rem;
  }

  /* Category Badge */
  .article-card-meta {
    margin-bottom: 0.75rem;
  }

  .category-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    font-size: var(--font-size-xs);
    font-weight: 600;
    color: var(--text-primary);
    background-color: var(--bg-overlay);
    border-radius: 12px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  /* Title */
  .article-card-title {
    font-size: var(--font-size-2xl);
    font-weight: 700;
    line-height: 1.25;
    color: var(--text-primary);
    margin-bottom: 0.75rem;
    transition: color 0.2s ease;
  }

  .article-card-link:hover .article-card-title {
    color: var(--accent-primary);
  }

  /* Description */
  .article-card-description {
    font-size: var(--font-size-base);
    line-height: var(--line-height-normal);
    color: var(--text-secondary);
    margin-bottom: 1rem;
    flex-grow: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Author Info */
  .article-card-author {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-top: auto;
  }

  .author-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    object-fit: cover;
    background-color: var(--bg-overlay);
    padding: 0.5rem;
  }

  .author-info {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
  }

  .author-name {
    font-weight: 500;
    color: var(--text-primary);
  }

  .separator {
    color: var(--text-muted);
  }

  /* Date Only */
  .article-card-date {
    margin-top: auto;
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
  }

  /* Responsive adjustments */
  @media (max-width: 767px) {
    .article-card-title {
      font-size: var(--font-size-xl);
    }

    .article-card-content {
      padding: 1rem 0.75rem;
    }
  }
</style>
