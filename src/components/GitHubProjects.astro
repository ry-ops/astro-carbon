---
// Hardcoded list of GitHub projects - can be fetched dynamically later
const projects = [
  {
    name: 'DriveIQ',
    description: 'AI-powered vehicle management for your Toyota 4Runner',
    url: 'https://github.com/ry-ops/DriveIQ',
    language: 'Python',
    stars: 1,
  },
  // Add more projects here as they're created
];
---

{projects.length > 0 && (
  <div class="rounded-lg p-6" style="background-color: var(--bg-secondary); border: 1px solid var(--border-default);">
    <h3 class="text-lg font-bold mb-6" style="color: var(--text-primary);">
      Other Projects
    </h3>
    <div class="space-y-4">
      {projects.map((project) => (
        <a
          href={project.url}
          target="_blank"
          rel="noopener noreferrer"
          class="block p-3 rounded transition-colors"
          style="background-color: var(--bg-primary); border: 1px solid var(--border-default);"
          onmouseover="this.style.borderColor='var(--accent-primary)'"
          onmouseout="this.style.borderColor='var(--border-default)'"
        >
          <div class="flex items-start justify-between mb-2">
            <h4 class="text-sm font-semibold" style="color: var(--text-primary);">
              {project.name}
            </h4>
            <div class="flex items-center gap-1" style="color: var(--text-secondary);">
              <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 16 16">
                <path d="M8 .25a.75.75 0 01.673.418l1.882 3.815 4.21.612a.75.75 0 01.416 1.279l-3.046 2.97.719 4.192a.75.75 0 01-1.088.791L8 12.347l-3.766 1.98a.75.75 0 01-1.088-.79l.72-4.194L.818 6.374a.75.75 0 01.416-1.28l4.21-.611L7.327.668A.75.75 0 018 .25z"></path>
              </svg>
              <span class="text-xs">{project.stars}</span>
            </div>
          </div>
          <p class="text-xs mb-2" style="color: var(--text-secondary);">
            {project.description}
          </p>
          <div class="flex items-center gap-2">
            <span class="w-2 h-2 rounded-full" style="background-color: #3572A5;"></span>
            <span class="text-xs" style="color: var(--text-secondary);">
              {project.language}
            </span>
          </div>
        </a>
      ))}
    </div>
  </div>
)}
