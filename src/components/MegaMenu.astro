---
import type { CategoryWithMegaMenu } from '../config/categories';
import { getCollection } from 'astro:content';

interface Props {
  category: CategoryWithMegaMenu;
}

const { category } = Astro.props;

// Split subcategories into two columns
const midpoint = Math.ceil(category.subcategories.length / 2);
const column1 = category.subcategories.slice(0, midpoint);
const column2 = category.subcategories.slice(midpoint);

// Dynamically fetch the most recent post for this category
const now = new Date();
const allPosts = await getCollection('posts', ({ data }) => {
  return data.category === category.name && data.category !== 'Docs' && data.date <= now;
});

// Sort by date (newest first) and get the most recent
const sortedPosts = allPosts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
const featuredPost = sortedPosts[0];

// Use dynamic featured post or fallback to static featured content
const displayFeatured = featuredPost ? {
  title: featuredPost.data.title,
  description: featuredPost.data.description,
  href: `/posts/${featuredPost.slug}`,
  image: featuredPost.data.hero?.image || featuredPost.data.image || '/images/placeholder.svg',
} : category.featured;
---

<div class="mega-menu-dropdown" data-category={category.slug}>
  <div class="mega-menu-container">
    <div class="mega-menu-header">
      <h3 class="mega-menu-title">{category.name}</h3>
      <p class="mega-menu-description">{category.description}</p>
    </div>

    <div class="mega-menu-content">
      <!-- Left: Subcategories (2 columns) -->
      <div class="mega-menu-subcategories">
        <div class="mega-menu-column">
          {column1.map((subcategory) => (
            <a href={subcategory.href} class="mega-menu-link">
              <div class="mega-menu-link-content">
                <span class="mega-menu-link-name">{subcategory.name}</span>
                <span class="mega-menu-link-description">{subcategory.description}</span>
              </div>
            </a>
          ))}
        </div>
        <div class="mega-menu-column">
          {column2.map((subcategory) => (
            <a href={subcategory.href} class="mega-menu-link">
              <div class="mega-menu-link-content">
                <span class="mega-menu-link-name">{subcategory.name}</span>
                <span class="mega-menu-link-description">{subcategory.description}</span>
              </div>
            </a>
          ))}
        </div>
      </div>

      <!-- Right: Featured content (dynamically fetched or fallback) -->
      {displayFeatured && (
        <div class="mega-menu-featured">
          <a href={displayFeatured.href} class="mega-menu-featured-link">
            {displayFeatured.image && (
              <div class="mega-menu-featured-image">
                <img
                  src={displayFeatured.image}
                  alt={displayFeatured.title}
                  loading="lazy"
                />
              </div>
            )}
            <div class="mega-menu-featured-content">
              <span class="mega-menu-featured-label">Latest</span>
              <h4 class="mega-menu-featured-title">{displayFeatured.title}</h4>
              <p class="mega-menu-featured-description">{displayFeatured.description}</p>
            </div>
          </a>
        </div>
      )}
    </div>
  </div>
</div>

<style>
  .mega-menu-dropdown {
    display: none;
    background-color: var(--bg-secondary);
    border-bottom: 1px solid var(--border-default);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
  }

  .mega-menu-dropdown.active {
    display: block;
  }

  .mega-menu-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 1.5rem 2rem;
  }

  .mega-menu-header {
    margin-bottom: 1.25rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--border-default);
  }

  .mega-menu-title {
    font-size: 20px;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0 0 4px 0;
  }

  .mega-menu-description {
    font-size: 14px;
    color: var(--text-secondary);
    margin: 0;
  }

  .mega-menu-content {
    display: grid;
    grid-template-columns: 1fr 280px;
    gap: 2rem;
  }

  .mega-menu-subcategories {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }

  .mega-menu-column {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .mega-menu-link {
    display: block;
    padding: 8px 10px;
    border-radius: 6px;
    text-decoration: none;
    transition: background-color 150ms ease-in-out;
  }

  .mega-menu-link:hover {
    background-color: var(--bg-tertiary);
  }

  .mega-menu-link-content {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .mega-menu-link-name {
    font-size: 14px;
    font-weight: 500;
    color: var(--text-primary);
  }

  .mega-menu-link:hover .mega-menu-link-name {
    color: var(--accent-primary);
  }

  .mega-menu-link-description {
    font-size: 12px;
    color: var(--text-secondary);
    line-height: 1.4;
  }

  /* Featured column styles */
  .mega-menu-featured {
    border-left: 1px solid var(--border-default);
    padding-left: 1.5rem;
  }

  .mega-menu-featured-link {
    display: block;
    text-decoration: none;
    transition: opacity 150ms ease-in-out;
  }

  .mega-menu-featured-link:hover {
    opacity: 0.9;
  }

  .mega-menu-featured-image {
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background-color: var(--bg-tertiary);
    border-radius: 6px;
    margin-bottom: 10px;
  }

  .mega-menu-featured-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 200ms ease;
  }

  .mega-menu-featured-link:hover .mega-menu-featured-image img {
    transform: scale(1.02);
  }

  .mega-menu-featured-content {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .mega-menu-featured-label {
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: var(--accent-primary);
  }

  .mega-menu-featured-title {
    font-size: 14px;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0;
    line-height: 1.35;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .mega-menu-featured-link:hover .mega-menu-featured-title {
    color: var(--accent-primary);
  }

  .mega-menu-featured-description {
    font-size: 12px;
    color: var(--text-secondary);
    margin: 0;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Responsive adjustments */
  @media (max-width: 1024px) {
    .mega-menu-content {
      grid-template-columns: 1fr 240px;
      gap: 1.5rem;
    }

    .mega-menu-subcategories {
      gap: 1rem;
    }
  }

  @media (max-width: 768px) {
    .mega-menu-container {
      padding: 1rem 1.5rem;
    }

    .mega-menu-content {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .mega-menu-subcategories {
      grid-template-columns: 1fr;
    }

    .mega-menu-featured {
      border-left: none;
      border-top: 1px solid var(--border-default);
      padding-left: 0;
      padding-top: 1rem;
    }

    .mega-menu-featured-link {
      display: grid;
      grid-template-columns: 120px 1fr;
      gap: 12px;
      align-items: start;
    }

    .mega-menu-featured-image {
      margin-bottom: 0;
      width: 120px;
    }
  }
</style>
