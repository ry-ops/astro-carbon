---
import { getAllCategoryLinks } from '../config/categories';

// Get all category links from config
const categoryLinks = getAllCategoryLinks();

// Footer navigation structure adapted for the blog
const footerSections = [
  {
    title: 'Content',
    links: [
      { name: 'All Posts', href: '/' },
      { name: 'Meet Cortex', href: '/meet-cortex' },
      { name: 'Prompt Library', href: '/prompt-library' },
      { name: 'Changelog', href: '/changelog' },
      { name: 'Docs', href: '/docs' },
    ]
  },
  {
    title: 'Categories',
    links: categoryLinks,
  },
  {
    title: 'Projects',
    links: [
      { name: 'DriveIQ', href: 'https://github.com/ry-ops/DriveIQ' },
      { name: 'GitHub', href: 'https://github.com/ry-ops' },
    ]
  },
  {
    title: 'Affiliates',
    links: [
      { name: 'Cloudflare', href: 'https://www.cloudflare.com' },
      { name: 'Netlify', href: 'https://www.netlify.com' },
      { name: 'Minisforum', href: 'https://www.minisforum.com' },
    ]
  }
];

const socialLinks = [
  { name: 'GitHub', href: 'https://github.com/ry-ops', icon: 'github' },
  { name: 'LinkedIn', href: '#', icon: 'linkedin' },
  { name: 'Twitter', href: 'https://x.com/ry_ops_dev', icon: 'twitter' },
];
---

<footer class="border-t mt-16" style="border-color: var(--border-default); background-color: var(--bg-primary);" role="contentinfo">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12">
    <!-- Logo and Navigation Grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-8 mb-12">
      <!-- Logo - Left aligned on large screens -->
      <div class="col-span-2 md:col-span-4 lg:col-span-1 mb-8 lg:mb-0">
        <a href="/" class="font-bold" style="font-size: var(--font-size-2xl); color: var(--text-primary); font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Noto Sans', Helvetica, Arial, sans-serif;">
          ry-ops
        </a>
      </div>

      <!-- Navigation Columns -->
      {footerSections.map((section) => (
        <nav aria-labelledby={`footer-${section.title.toLowerCase()}`}>
          <h3 id={`footer-${section.title.toLowerCase()}`} class="font-semibold mb-4" style="font-size: var(--font-size-base); color: var(--text-primary); font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Noto Sans', Helvetica, Arial, sans-serif;">
            {section.title}
          </h3>
          <ul class="space-y-3">
            {section.links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="footer-link transition-colors underline"
                  style="font-size: var(--font-size-sm); color: var(--text-secondary); text-underline-offset: 4px; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Noto Sans', Helvetica, Arial, sans-serif;"
                  target={link.href.startsWith('http') ? '_blank' : undefined}
                  rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}
                >
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </nav>
      ))}
    </div>

    <!-- Copyright & Legal -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
      <p style="font-size: var(--font-size-sm); color: var(--text-secondary); font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Noto Sans', Helvetica, Arial, sans-serif;">
        &copy; 2025 ry-ops. All rights reserved.
      </p>
      <nav aria-label="Legal and privacy links" class="flex flex-wrap gap-6">
        <a
          href="/terms"
          class="footer-legal-link transition-colors underline"
          style="font-size: var(--font-size-sm); color: var(--text-secondary); text-underline-offset: 4px; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Noto Sans', Helvetica, Arial, sans-serif;"
        >
          Terms
        </a>
        <a
          href="/privacy"
          class="footer-legal-link transition-colors underline"
          style="font-size: var(--font-size-sm); color: var(--text-secondary); text-underline-offset: 4px; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Noto Sans', Helvetica, Arial, sans-serif;"
        >
          Privacy
        </a>
        <a
          href="/cookies"
          class="footer-legal-link transition-colors underline"
          style="font-size: var(--font-size-sm); color: var(--text-secondary); text-underline-offset: 4px; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Noto Sans', Helvetica, Arial, sans-serif;"
        >
          Manage cookies
        </a>
        <a
          href="/do-not-share"
          class="footer-legal-link transition-colors underline"
          style="font-size: var(--font-size-sm); color: var(--text-secondary); text-underline-offset: 4px; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Noto Sans', Helvetica, Arial, sans-serif;"
        >
          Do not share my personal information
        </a>
      </nav>
      <nav aria-label="Social media links" class="flex items-center gap-6">
        {socialLinks.map((social) => (
          <a
            href={social.href}
            target="_blank"
            rel="noopener noreferrer"
            class="footer-social-link transition-colors"
            style="color: var(--text-secondary);"
            aria-label={social.name}
          >
            {social.icon === 'github' && (
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 16 16">
                <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"></path>
              </svg>
            )}
            {social.icon === 'linkedin' && (
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            )}
            {social.icon === 'twitter' && (
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            )}
          </a>
        ))}
      </nav>
    </div>
  </div>
</footer>

<style>
  /* Footer link hover states */
  .footer-link:hover,
  .footer-link:focus {
    color: var(--text-primary) !important;
  }

  .footer-legal-link:hover,
  .footer-legal-link:focus {
    color: var(--text-primary) !important;
  }

  .footer-social-link:hover,
  .footer-social-link:focus {
    color: var(--text-primary) !important;
  }
</style>
