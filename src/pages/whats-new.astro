---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Curated "What's New" items - manually selected posts and projects
const featuredItems = [
  {
    number: '001',
    badge: 'Now Available',
    badgeColor: 'teal',
    title: 'DriveIQ',
    subtitle: 'AI-Powered Vehicle Management',
    description: 'Track maintenance, set intelligent reminders, and consult your vehicle manual with AI assistance. DriveIQ brings modern technology to vehicle care for your 2018 Toyota 4Runner SR5 Premium.',
    cta: {
      text: 'Explore DriveIQ',
      href: '/posts/driveiq-vehicle-management',
    },
    image: 'https://images.unsplash.com/photo-1547245324-d777c6f05e80?q=80&w=1740&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
    type: 'project',
  },
];
---

<Layout
  title="What's New"
  description="Discover the latest projects, articles, and updates from ry-ops. Featuring DriveIQ, Cortex, and more."
>
  <Header />

  <!-- Hero Section -->
  <section class="relative overflow-hidden py-20 md:py-32" style="background: linear-gradient(180deg, var(--bg-primary) 0%, var(--bg-secondary) 100%);">
    <div class="content-constrained px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <div class="mb-6">
          <span class="inline-block px-4 py-2 rounded-full text-sm font-semibold" style="background-color: var(--bg-overlay); color: var(--accent-primary);">
            Latest Updates
          </span>
        </div>
        <h1 class="text-5xl md:text-7xl font-bold mb-6" style="color: var(--text-primary);">
          What's New
        </h1>
        <p class="text-xl md:text-2xl mb-8" style="color: var(--text-secondary);">
          Discover the latest projects, tools, and innovations. From AI-powered applications to developer tools, see what's being built.
        </p>
      </div>
    </div>
  </section>

  <!-- Featured Items -->
  <section class="py-16">
    <div class="content-constrained px-4 sm:px-6 lg:px-8">
      {featuredItems.map((item, index) => (
        <article class="mb-32 last:mb-0">
          <div class={`grid md:grid-cols-2 gap-12 items-center ${index % 2 === 1 ? 'md:flex-row-reverse' : ''}`}>
            <!-- Content -->
            <div class={index % 2 === 1 ? 'md:order-2' : ''}>
              <div class="mb-4">
                <span class="text-sm font-mono" style="color: var(--text-secondary);">
                  {item.number}
                </span>
              </div>

              <div class="mb-4">
                <span
                  class="inline-block px-3 py-1 rounded-full text-xs font-semibold"
                  style={`background-color: var(--bg-overlay); color: var(--accent-primary);`}
                >
                  {item.badge}
                </span>
              </div>

              <h2 class="text-4xl md:text-5xl font-bold mb-4" style="color: var(--text-primary);">
                {item.title}
              </h2>

              <h3 class="text-2xl md:text-3xl font-semibold mb-6" style="color: var(--text-secondary);">
                {item.subtitle}
              </h3>

              <p class="text-lg mb-8" style="color: var(--text-secondary); line-height: 1.6;">
                {item.description}
              </p>

              <a
                href={item.cta.href}
                target={item.cta.href.startsWith('http') ? '_blank' : undefined}
                rel={item.cta.href.startsWith('http') ? 'noopener noreferrer' : undefined}
                class="inline-flex items-center px-6 py-3 rounded-md font-semibold transition-colors"
                style="background-color: var(--accent-emphasis); color: white;"
                onmouseover="this.style.backgroundColor='var(--accent-primary)'"
                onmouseout="this.style.backgroundColor='var(--accent-emphasis)'"
              >
                {item.cta.text}
                <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>

            <!-- Image -->
            <div class={index % 2 === 1 ? 'md:order-1' : ''}>
              <div class="relative rounded-lg overflow-hidden" style="border: 1px solid var(--border-default);">
                <img
                  src={item.image}
                  alt={item.title}
                  class="w-full h-auto"
                />
              </div>
            </div>
          </div>
        </article>
      ))}
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 md:py-32" style="background-color: var(--bg-secondary);">
    <div class="content-constrained px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl md:text-5xl font-bold mb-6" style="color: var(--text-primary);">
        Explore More
      </h2>
      <p class="text-xl mb-8 mx-auto" style="color: var(--text-secondary);">
        Check out all projects on GitHub or learn about Cortex.
      </p>
      <div class="flex flex-wrap justify-center gap-4 mt-8">
        <a
          href="https://github.com/ry-ops"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-6 py-3 rounded-md font-semibold transition-colors"
          style="background-color: var(--accent-emphasis); color: white;"
          onmouseover="this.style.backgroundColor='var(--accent-primary)'"
          onmouseout="this.style.backgroundColor='var(--accent-emphasis)'"
        >
          View on GitHub
        </a>
        <a
          href="/meet-cortex"
          class="inline-flex items-center px-6 py-3 rounded-md font-semibold transition-colors"
          style="border: 1px solid var(--border-default); color: var(--text-primary);"
        >
          Meet Cortex
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
