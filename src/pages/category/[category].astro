---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';
import { ALL_CATEGORIES, getCategorySlug } from '../../config/categories';

export async function getStaticPaths() {
  const now = new Date();
  const posts = await getCollection('posts', ({ data }) => data.date <= now);

  // Generate pages for all defined categories
  return ALL_CATEGORIES.map(category => ({
    params: {
      category: getCategorySlug(category)
    },
    props: {
      category,
      posts: posts.filter(post => post.data.category === category && post.data.category !== 'Docs')
    },
  }));
}

const { category, posts } = Astro.props;

// Sort posts by date (newest first)
const sortedPosts = posts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

// Helper function to format category slug
function getCategorySlug(cat: string) {
  return cat.toLowerCase().replace(/\s+/g, '-').replace(/&/g, '');
}

// Helper function to format date
function formatDate(date: Date) {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  });
}
---

<Layout title={`${category} - ry-ops`} description={`Browse all ${category} posts on the ry-ops blog`}>
  <Header />

  <article class="py-16">
    <!-- Breadcrumb -->
    <div class="content-constrained px-4 sm:px-6 lg:px-8 mb-6">
      <nav class="flex items-center gap-2 text-sm" style="color: var(--text-secondary);">
        <a href="/" class="hover:underline">Home</a>
        <span>â†’</span>
        <span style="color: var(--text-primary);">{category}</span>
      </nav>
    </div>

    <!-- Hero Section -->
    <section class="relative overflow-hidden py-12 md:py-20" style="background: linear-gradient(180deg, var(--bg-primary) 0%, var(--bg-secondary) 100%);">
      <div class="content-constrained px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl">
          <div class="mb-6">
            <span class="inline-block px-4 py-2 rounded-full text-sm font-semibold" style="background-color: var(--bg-overlay); color: var(--accent-primary);">
              {category}
            </span>
          </div>
          <h1 class="text-5xl md:text-6xl font-bold mb-6" style="color: var(--text-primary);">
            {category}
          </h1>
          <p class="text-xl md:text-2xl" style="color: var(--text-secondary);">
            {sortedPosts.length} {sortedPosts.length === 1 ? 'post' : 'posts'} in this category
          </p>
        </div>
      </div>
    </section>

    <!-- Posts Grid -->
    <section class="py-16">
      <div class="content-constrained px-4 sm:px-6 lg:px-8">
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          {sortedPosts.map((post) => (
            <article class="rounded-lg overflow-hidden transition-transform hover:scale-105" style="border: 1px solid var(--border-default); background-color: var(--bg-secondary);">
              <a href={`/posts/${post.slug}`}>
                <img
                  src={post.data.hero?.image || post.data.image}
                  alt={post.data.title}
                  class="w-full h-48 object-cover"
                />
              </a>
              <div class="p-6">
                <div class="mb-3">
                  <span class="inline-block px-3 py-1 rounded-full text-xs font-semibold" style="background-color: var(--bg-overlay); color: var(--accent-primary);">
                    {post.data.category}
                  </span>
                </div>
                <h2 class="text-xl font-bold mb-3" style="color: var(--text-primary);">
                  <a href={`/posts/${post.slug}`} class="hover:underline">
                    {post.data.title}
                  </a>
                </h2>
                <p class="text-sm mb-4" style="color: var(--text-secondary); line-height: 1.6;">
                  {post.data.description}
                </p>
                <div class="flex items-center justify-between text-sm" style="color: var(--text-secondary);">
                  <div class="flex items-center gap-3">
                    {post.data.author.avatar && (
                      <img
                        src={post.data.author.avatar}
                        alt={post.data.author.name}
                        class="w-12 h-12 rounded-full p-3"
                        style="object-fit: contain; background-color: var(--bg-secondary);"
                      />
                    )}
                    <span>{post.data.author.name}</span>
                  </div>
                  <time datetime={post.data.date.toISOString()}>
                    {formatDate(post.data.date)}
                  </time>
                </div>
              </div>
            </article>
          ))}
        </div>

        {sortedPosts.length === 0 && (
          <div class="text-center py-16">
            <p class="text-xl" style="color: var(--text-secondary);">
              No posts found in this category yet. Check back soon!
            </p>
          </div>
        )}
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16" style="background-color: var(--bg-secondary);">
      <div class="content-constrained px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6" style="color: var(--text-primary);">
          Explore more content
        </h2>
        <p class="text-lg mb-8 max-w-2xl mx-auto" style="color: var(--text-secondary);">
          Browse other categories or view all posts to discover more projects, tutorials, and insights.
        </p>
        <div class="flex flex-wrap justify-center gap-4 mt-8">
          <a
            href="/posts"
            class="inline-flex items-center px-6 py-3 rounded-md font-semibold transition-colors"
            style="background-color: var(--accent-emphasis); color: white;"
            onmouseover="this.style.backgroundColor='var(--accent-primary)'"
            onmouseout="this.style.backgroundColor='var(--accent-emphasis)'"
          >
            View All Posts
          </a>
          <a
            href="/showcase"
            class="inline-flex items-center px-6 py-3 rounded-md font-semibold transition-colors"
            style="border: 1px solid var(--border-default); color: var(--text-primary);"
          >
            View Showcase
          </a>
        </div>
      </div>
    </section>
  </article>

  <Footer />
</Layout>
