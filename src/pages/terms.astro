---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Terms of Service - ry-ops" description="Terms of Service for the ry-ops blog and projects">
  <Header />

  <article class="py-16">
    <div class="content-constrained px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <!-- Breadcrumb -->
        <nav class="flex items-center gap-2 text-sm mb-6" style="color: var(--text-secondary);">
          <a href="/" class="hover:underline">Home</a>
          <span>â†’</span>
          <span style="color: var(--text-primary);">Terms of Service</span>
        </nav>

        <!-- Header -->
        <header class="mb-12">
          <h1 class="text-5xl font-bold mb-4" style="color: var(--text-primary);">
            Terms of Service
          </h1>
          <p class="text-lg" style="color: var(--text-secondary);">
            Last updated: January 1, 2025
          </p>
        </header>

        <!-- Content -->
        <div class="prose prose-invert prose-lg max-w-none" style="color: var(--text-secondary);">
          <h2 style="color: var(--text-primary); font-size: 2rem; font-weight: 700; margin-top: 2em; margin-bottom: 0.75em; border-bottom: 1px solid var(--border-default); padding-bottom: 0.5em;">
            Acceptance of Terms
          </h2>
          <p style="line-height: 1.75; margin: 1.25em 0;">
            By accessing and using this website, you accept and agree to be bound by the terms and provision of this agreement. If you do not agree to abide by the terms of this agreement, you are not authorized to use or access this website.
