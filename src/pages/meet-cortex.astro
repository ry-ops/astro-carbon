---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

// Get all Cortex-related blog posts
const now = new Date();
const allPosts = await getCollection('posts', ({ data }) => data.date <= now);
const cortexPosts = allPosts
  .filter(post =>
    post.data.title.toLowerCase().includes('cortex') ||
    post.data.tags?.some(tag => tag.toLowerCase() === 'cortex')
  )
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 6); // Show latest 6 posts

const capabilities = [
  {
    icon: 'üß†',
    title: 'Learns & Adapts',
    description: 'Cortex continuously learns from every task, improving routing decisions and success patterns over time.'
  },
  {
    icon: '‚ö°',
    title: 'Unlimited Scale',
    description: 'No artificial limits. Proven 128 simultaneous workers, configured for 10,000+. Scales infinitely based on task complexity and workload demands.'
  },
  {
    icon: 'üéØ',
    title: 'Intelligent Routing',
    description: 'Advanced routing system analyzes tasks and assigns them to the most qualified specialist agents.'
  },
  {
    icon: 'üîÑ',
    title: 'Fully Autonomous',
    description: 'Operates independently with built-in health monitoring, self-healing, and automated recovery.'
  },
  {
    icon: 'üõ°Ô∏è',
    title: 'Security First',
    description: '5-layer security defense protecting against prompt injection, unauthorized access, and malicious operations.'
  },
  {
    icon: 'üìä',
    title: 'Complete Observability',
    description: 'Decision tracing, behavioral monitoring, and outcome alignment. Real-time insights into why agents make specific choices and how they learn.'
