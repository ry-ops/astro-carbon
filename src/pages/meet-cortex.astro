        </line>
        <line x1="50%" y1="70%" x2="70%" y2="65%" stroke="url(#connectionGradient)" stroke-width="1.5" opacity="0.4">
          <animate attributeName="opacity" values="0.2;0.7;0.2" dur="3.2s" repeatCount="indefinite"/>
        </line>

        <!-- Layer 4 connections -->
        <line x1="70%" y1="35%" x2="90%" y2="50%" stroke="url(#connectionGradient)" stroke-width="1.5" opacity="0.5">
          <animate attributeName="opacity" values="0.3;0.8;0.3" dur="4s" repeatCount="indefinite"/>
        </line>
        <line x1="70%" y1="65%" x2="90%" y2="50%" stroke="url(#connectionGradient)" stroke-width="1.5" opacity="0.4">
          <animate attributeName="opacity" values="0.2;0.7;0.2" dur="3.5s" repeatCount="indefinite"/>
        </line>

        <!-- Agent Nodes with pulsing animation -->
        <!-- Input layer -->
        <circle cx="10%" cy="20%" r="6" fill="#3b82f6" filter="url(#glow)">
          <animate attributeName="r" values="5;7;5" dur="3s" repeatCount="indefinite"/>
        </circle>
        <circle cx="10%" cy="80%" r="6" fill="#3b82f6" filter="url(#glow)">
          <animate attributeName="r" values="5;7;5" dur="3.5s" repeatCount="indefinite"/>
        </circle>

        <!-- Hidden layer 1 -->
        <circle cx="30%" cy="40%" r="7" fill="#60a5fa" filter="url(#glow)">
          <animate attributeName="r" values="6;8;6" dur="4s" repeatCount="indefinite"/>
        </circle>
        <circle cx="30%" cy="60%" r="7" fill="#60a5fa" filter="url(#glow)">
          <animate attributeName="r" values="6;8;6" dur="3.8s" repeatCount="indefinite"/>
        </circle>

        <!-- Hidden layer 2 (master agents) -->
        <circle cx="50%" cy="30%" r="8" fill="#8b5cf6" filter="url(#glow)">
          <animate attributeName="r" values="7;9;7" dur="3.2s" repeatCount="indefinite"/>
        </circle>
        <circle cx="50%" cy="50%" r="9" fill="#a78bfa" filter="url(#glow)">
          <animate attributeName="r" values="8;10;8" dur="4.5s" repeatCount="indefinite"/>
        </circle>
        <circle cx="50%" cy="70%" r="8" fill="#8b5cf6" filter="url(#glow)">
          <animate attributeName="r" values="7;9;7" dur="3.7s" repeatCount="indefinite"/>
        </circle>

        <!-- Hidden layer 3 (coordinators) -->
