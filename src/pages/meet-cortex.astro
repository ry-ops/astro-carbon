---

<Layout
  title="Meet Cortex - Autonomous AI Orchestration"
  description="Discover Cortex: A completely autonomous AI orchestration system that learns, adapts, and scales from 1 to 100+ agents on-demand. Built by ry-ops."
>
  <Header />

  <!-- Hero Section -->
  <section class="relative overflow-hidden py-20 md:py-32" style="background: linear-gradient(180deg, var(--bg-primary) 0%, var(--bg-secondary) 100%);">
    <!-- Animated AI Topology Background -->
    <div class="absolute inset-0 opacity-20">
      <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" preserveAspectRatio="xMidYMid slice">
        <defs>
          <!-- Gradient for connections -->
          <linearGradient id="connectionGradient" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style="stop-color:#3b82f6;stop-opacity:0.6" />
            <stop offset="100%" style="stop-color:#8b5cf6;stop-opacity:0.3" />
          </linearGradient>

          <!-- Glow filter for nodes -->
          <filter id="glow">
            <feGaussianBlur stdDeviation="2" result="coloredBlur"/>
            <feMerge>
              <feMergeNode in="coloredBlur"/>
              <feMergeNode in="SourceGraphic"/>
            </feMerge>
          </filter>
        </defs>

        <!-- Connection lines forming neural network -->
        <!-- Layer 1 connections -->
        <line x1="10%" y1="20%" x2="30%" y2="40%" stroke="url(#connectionGradient)" stroke-width="1.5" opacity="0.4">
          <animate attributeName="opacity" values="0.2;0.6;0.2" dur="4s" repeatCount="indefinite"/>
        </line>
        <line x1="10%" y1="20%" x2="30%" y2="60%" stroke="url(#connectionGradient)" stroke-width="1.5" opacity="0.3">
          <animate attributeName="opacity" values="0.3;0.7;0.3" dur="5s" repeatCount="indefinite"/>
        </line>
        <line x1="10%" y1="80%" x2="30%" y2="40%" stroke="url(#connectionGradient)" stroke-width="1.5" opacity="0.4">
          <animate attributeName="opacity" values="0.2;0.5;0.2" dur="4.5s" repeatCount="indefinite"/>
        </line>
        <line x1="10%" y1="80%" x2="30%" y2="60%" stroke="url(#connectionGradient)" stroke-width="1.5" opacity="0.3">
          <animate attributeName="opacity" values="0.3;0.6;0.3" dur="3.5s" repeatCount="indefinite"/>
        </line>

        <!-- Layer 2 connections -->
        <line x1="30%" y1="40%" x2="50%" y2="30%" stroke="url(#connectionGradient)" stroke-width="1.5" opacity="0.4">
          <animate attributeName="opacity" values="0.2;0.7;0.2" dur="3s" repeatCount="indefinite"/>
        </line>
        <line x1="30%" y1="40%" x2="50%" y2="50%" stroke="url(#connectionGradient)" stroke-width="1.5" opacity="0.5">
          <animate attributeName="opacity" values="0.3;0.8;0.3" dur="4s" repeatCount="indefinite"/>
        </line>
        <line x1="30%" y1="40%" x2="50%" y2="70%" stroke="url(#connectionGradient)" stroke-width="1.5" opacity="0.3">
          <animate attributeName="opacity" values="0.2;0.6;0.2" dur="5s" repeatCount="indefinite"/>
        </line>
        <line x1="30%" y1="60%" x2="50%" y2="30%" stroke="url(#connectionGradient)" stroke-width="1.5" opacity="0.3">
          <animate attributeName="opacity" values="0.3;0.7;0.3" dur="3.8s" repeatCount="indefinite"/>
        </line>
        <line x1="30%" y1="60%" x2="50%" y2="50%" stroke="url(#connectionGradient)" stroke-width="1.5" opacity="0.4">
          <animate attributeName="opacity" values="0.2;0.6;0.2" dur="4.2s" repeatCount="indefinite"/>
        </line>
        <line x1="30%" y1="60%" x2="50%" y2="70%" stroke="url(#connectionGradient)" stroke-width="1.5" opacity="0.5">
          <animate attributeName="opacity" values="0.3;0.8;0.3" dur="3.3s" repeatCount="indefinite"/>
        </line>

        <!-- Layer 3 connections -->
        <line x1="50%" y1="30%" x2="70%" y2="35%" stroke="url(#connectionGradient)" stroke-width="1.5" opacity="0.4">
          <animate attributeName="opacity" values="0.2;0.7;0.2" dur="4s" repeatCount="indefinite"/>
        </line>
        <line x1="50%" y1="30%" x2="70%" y2="65%" stroke="url(#connectionGradient)" stroke-width="1.5" opacity="0.3">
          <animate attributeName="opacity" values="0.3;0.6;0.3" dur="5s" repeatCount="indefinite"/>
        </line>
        <line x1="50%" y1="50%" x2="70%" y2="35%" stroke="url(#connectionGradient)" stroke-width="1.5" opacity="0.5">
          <animate attributeName="opacity" values="0.3;0.8;0.3" dur="3.5s" repeatCount="indefinite"/>
        </line>
        <line x1="50%" y1="50%" x2="70%" y2="65%" stroke="url(#connectionGradient)" stroke-width="1.5" opacity="0.4">
